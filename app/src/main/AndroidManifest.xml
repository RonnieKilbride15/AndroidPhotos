<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidphotos82">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SearchResults"
            android:label="@string/title_activity_search_results"
            android:parentActivityName=".SearchActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos82.SearchActivity" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos82.MainActivity" />
        </activity>
        <activity
            android:name=".MoveToAlbum"
            android:label="@string/title_activity_move_to_album"
            android:parentActivityName=".PhotoDisplay"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos82.PhotoDisplay" />
        </activity>
        <activity
            android:name=".AddTag"
            android:label="@string/title_activity_add_tag"
            android:parentActivityName=".PhotoDisplay"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos82.PhotoDisplay" />
        </activity>
        <activity
            android:name=".PhotoDisplay"
            android:label="@string/title_activity_photo_display"
            android:parentActivityName=".PhotosList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos82.PhotosList" />
        </activity>
        <activity
            android:name=".AddPhoto"
            android:label="@string/title_activity_add_photo"
            android:parentActivityName=".PhotosList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos82.PhotosList" />
        </activity>
        <activity
            android:name=".PhotosList"
            android:label="@string/title_activity_photos_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos82.MainActivity" />
        </activity>
        <activity
            android:name=".AddAlbum"
            android:label="@string/title_activity_add_movie"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.androidphotos82.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Albums">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>